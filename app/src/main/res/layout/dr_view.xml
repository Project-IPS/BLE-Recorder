<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="84dp"
        android:paddingStart="32dp"
        android:paddingEnd="32dp">

        <TextView
            android:id="@+id/rotView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rotation_matrix_view"
            />
        <TextView
            android:id="@+id/rotMatrixView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_value_view"
            />
        <TextView
            android:id="@+id/gView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gravity_view"
            />
        <TextView
            android:id="@+id/gravityView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_value_view"
            />
        <TextView
            android:id="@+id/magView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/magnetometer_view"
            />
        <TextView
            android:id="@+id/magnetometerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_value_view"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>